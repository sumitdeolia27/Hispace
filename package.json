{
    "name": "hispace",
    "version": "1.7.12",
    "description": "A free WebRTC browser-based video call",
    "main": "server.js",
    "scripts": {
        "start": "node app/src/server.js",
        "start-dev": "nodemon app/src/server.js",
        "test": "mocha tests/*.js",
        "lint": "npx prettier --write .",
        "docker-build": "docker build --tag hispace/p2p:latest .",
        "docker-rmi": "docker images |grep '<none>' |awk '{print $3}' |xargs docker rmi",
        "docker-push": "docker push hispace/p2p:latest",
        "docker-pull": "docker pull hispace/p2p:latest",
        "docker-rmc": "docker container rm hispace --force",
        "docker-run": "docker run -d -p 3000:3000 --name hispace hispace/p2p:latest",
        "docker-rune": "docker run -d -p 3000:3000 -v .env:/src/.env:ro --name hispace hispace/p2p:latest",
        "docker-run-vm": "docker run -d -p 3000:3000 -v .env:/src/.env:ro -v ./app/:/src/app/:ro -v ./public/:/src/public/:ro --name hispace hispace/p2p:latest",
        "docker-start": "docker start hispace",
        "docker-stop": "docker stop hispace"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/miroslavpejic85/hispace"
    },
    "keywords": [
        "webrtc",
        "socket.io",
        "p2p",
        "nodejs",
        "video",
        "audio",
        "openai",
        "oidc",
        "chatgpt",
        "client",
        "server",
        "streaming"
    ],
    "author": "Miroslav Pejic",
    "license": "AGPL-3.0",
    "homepage": "https://github.com/miroslavpejic85/hispace",
    "dependencies": {
        "@mattermost/client": "11.2.0",
        "@ngrok/ngrok": "1.7.0",
        "@sentry/node": "^10.34.0",
        "axios": "^1.13.2",
        "chokidar": "^5.0.0",
        "colors": "^1.4.0",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "crypto-js": "^4.2.0",
        "dompurify": "^3.3.1",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "express-openid-connect": "^2.19.4",
        "express-rate-limit": "^8.2.1",
        "he": "^1.2.0",
        "helmet": "^8.1.0",
        "httpolyglot": "0.1.2",
        "js-yaml": "^4.1.1",
        "jsdom": "^27.4.0",
        "jsonwebtoken": "^9.0.3",
        "nodemailer": "^7.0.12",
        "openai": "^6.16.0",
        "qs": "^6.14.1",
        "socket.io": "^4.8.3",
        "swagger-ui-express": "^5.0.1",
        "uuid": "13.0.0"
    },
    "devDependencies": {
        "mocha": "^11.7.5",
        "node-fetch": "^3.3.2",
        "nodemon": "^3.1.11",
        "prettier": "3.8.0",
        "proxyquire": "^2.1.3",
        "should": "^13.2.3",
        "sinon": "^21.0.1"
    }
}
